<%- include('header') -%>


    <h1 id="heading"> <%= listTitle %> </h1>
    <div class="">
        <% newListItem.forEach(function(item){ %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="checkbox" onchange="this.form.submit()" name="checkbox" value="<%= item._id %>">
                <p> <%= item.name %> </p>
            </div>
        </form>
            <% }) %>
    </div>
    <form class="form" action="" method="post">
        <input type="text" name="newItem" placeholder="Enter new Task">
        <button type="submit" name="button" value= <%= listTitle %> >Add</button>
    </form>

<%- include('footer') -%>